{
  "name": "progress-tracker-v2",
  "version": "0.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "migrate": "bun --bun run ./src/lib/server/db/migrate.js",
    "generate": "drizzle-kit generate:sqlite --config=./drizzle.config.js",
    "studio": "bunx --bun drizzle-kit studio --config=./drizzle.config.js",
    "start": "bun run ./build",
    "dev": "bunx --bun vite dev",
    "build": "bunx --bun vite build",
    "preview": "bunx --bun vite preview",
    "build:preview": "bunx --bun vite build && PORT=5173 bun ./build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "format": "biome format --write .",
    "fmt": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@sveltejs/kit": "^2.5.18",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tailwindcss/vite": "^4.0.0-alpha.16",
    "@types/bun": "latest",
    "drizzle-kit": "^0.22.8",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.41.0",
    "lucide-svelte": "^0.370.0",
    "nanoid": "^5.0.7",
    "prettier": "^4.0.0-alpha.9",
    "prettier-plugin-svelte": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "svelte": "5.0.0-next.148",
    "svelte-adapter-bun": "^0.5.2",
    "svelte-check": "^3.8.4",
    "svelte-headless-table": "^0.18.2",
    "tailwindcss": "^4.0.0-alpha.16",
    "typescript": "^5.5.3",
    "vite": "^5.3.2"
  },
  "dependencies": {
    "bits-ui": "^0.21.11",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.31.2",
    "mode-watcher": "^0.3.1",
    "svelte-radix": "^1.1.0",
    "svelte-sonner": "^0.3.24",
    "tailwind-merge": "^2.3.0",
    "tailwind-variants": "^0.2.1",
    "vaul-svelte": "^0.3.2"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@sveltejs/kit",
    "esbuild",
    "es5-ext",
    "svelte-preprocess"
  ]
}
